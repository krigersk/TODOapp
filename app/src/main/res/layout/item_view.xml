<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:layout_margin="8dp"
    android:padding="5dp">

    <Button
        android:id="@+id/deleteTask"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/TaskText"
        app:layout_constraintTop_toTopOf="@id/TaskText"
        android:background="@drawable/buttongradient"
        android:text="Delete"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/TaskText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/deleteTask"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Your Task here"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/dateCreated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/TaskText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/itemEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Date created:"/>

    <Button
        android:id="@+id/itemEdit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dateCreated"
        app:layout_constraintLeft_toRightOf="@id/dateCreated"
        android:background="@drawable/buttongradient"
        android:text="Edit"
        android:textSize="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>